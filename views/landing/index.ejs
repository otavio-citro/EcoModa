        class ImageCarousel {
            constructor() {
                // Elementos do DOM
                this.slides = document.querySelectorAll('.carousel-slide');
                this.indicators = document.querySelectorAll('.indicator-dot');
                this.prevButton = document.querySelector('.carousel-arrow-prev');
                this.nextButton = document.querySelector('.carousel-arrow-next');
                this.currentSlideSpan = document.getElementById('current-slide');
                this.totalSlidesSpan = document.getElementById('total-slides');

                // Estado
                this.currentSlide = 0;
                this.totalSlides = this.slides.length;
                this.autoplayInterval = null;
                this.autoplayDelay = 5000; // 5 segundos

                // Inicializar
                this.init();
            }

            /**
             * Inicializa o carrossel
             */
            init() {
                // Adicionar event listeners
                this.prevButton.addEventListener('click', () => this.goToPrevSlide());
                this.nextButton.addEventListener('click', () => this.goToNextSlide());

                // Adicionar event listeners aos indicadores
                this.indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => this.goToSlide(index));
                });

                // Iniciar autoplay
                this.startAutoplay();

                // Pausar autoplay ao passar o mouse sobre o carrossel
                const carouselContainer = document.querySelector('.carousel-container');
                carouselContainer.addEventListener('mouseenter', () => this.stopAutoplay());
                carouselContainer.addEventListener('mouseleave', () => this.startAutoplay());

                // Atualizar informações iniciais
                this.updateInfo();
            }

            /**
             * Vai para um slide específico
             * @param {number} index - Índice do slide
             */
            goToSlide(index) {
                // Validar índice
                if (index < 0 || index >= this.totalSlides) {
                    return;
                }

                // Remover classe 'active' do slide e indicador atuais
                this.slides[this.currentSlide].classList.remove('active');
                this.indicators[this.currentSlide].classList.remove('active');

                // Atualizar índice atual
                this.currentSlide = index;

                // Adicionar classe 'active' ao novo slide e indicador
                this.slides[this.currentSlide].classList.add('active');
                this.indicators[this.currentSlide].classList.add('active');

                // Atualizar informações
                this.updateInfo();

                // Reiniciar autoplay
                this.restartAutoplay();
            }

            /**
             * Vai para o próximo slide
             */
            goToNextSlide() {
                const nextIndex = (this.currentSlide + 1) % this.totalSlides;
                this.goToSlide(nextIndex);
            }

            /**
             * Vai para o slide anterior
             */
            goToPrevSlide() {
                const prevIndex = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
                this.goToSlide(prevIndex);
            }

            /**
             * Inicia o autoplay
             */
            startAutoplay() {
                if (this.autoplayInterval) {
                    return; // Já está rodando
                }

                this.autoplayInterval = setInterval(() => {
                    this.goToNextSlide();
                }, this.autoplayDelay);
            }

            /**
             * Para o autoplay
             */
            stopAutoplay() {
                if (this.autoplayInterval) {
                    clearInterval(this.autoplayInterval);
                    this.autoplayInterval = null;
                }
            }

            /**
             * Reinicia o autoplay
             */
            restartAutoplay() {
                this.stopAutoplay();
                this.startAutoplay();
            }

            /**
             * Atualiza as informações do slide atual
             */
            updateInfo() {
                if (this.currentSlideSpan && this.totalSlidesSpan) {
                    this.currentSlideSpan.textContent = this.currentSlide + 1;
                    this.totalSlidesSpan.textContent = this.totalSlides;
                }
            }
        }

        /**
         * Inicializar o carrossel quando o DOM estiver pronto
         */
        document.addEventListener('DOMContentLoaded', () => {
            new ImageCarousel();
        });

    </Script>




    <script>
        /**
 * Classe para controlar o Carrossel de Produtos - V2
 * Funcionalidade: Navegação por setas, Autoplay a cada 30 segundos,
 *                 Setas condicionais e Indicadores de slide.
 *                 Adaptado para slides de 3 cards.
 */
        class ProductCarouselV2 {
            constructor(selector) {
                // Elementos do DOM
                this.wrapper = document.querySelector(selector);
                this.track = this.wrapper.querySelector('.product-carousel-track-v2');
                this.slides = this.wrapper.querySelectorAll('.product-slide-v2');
                this.prevButton = this.wrapper.querySelector('.product-carousel-arrow-prev-v2');
                this.nextButton = this.wrapper.querySelector('.product-carousel-arrow-next-v2');
                this.indicatorsContainer = this.wrapper.querySelector('.product-carousel-indicators-v2');

                // Estado
                this.currentSlideIndex = 0;
                this.totalSlides = this.slides.length;
                this.autoplayInterval = null;
                this.autoplayDelay = 30000; // 30 segundos, conforme solicitado

                // Inicializar
                if (this.totalSlides > 0) {
                    this.init();
                }
            }

            /**
             * Inicializa o carrossel
             */
            init() {
                // 1. Gerar e adicionar event listeners aos indicadores
                this.generateIndicators();

                // 2. Adicionar event listeners às setas
                this.prevButton.addEventListener('click', () => this.goToPrevSlide());
                this.nextButton.addEventListener('click', () => this.goToNextSlide());

                // 3. Iniciar autoplay
                this.startAutoplay();

                // 4. Pausar autoplay ao passar o mouse sobre o carrossel
                this.wrapper.addEventListener('mouseenter', () => this.stopAutoplay());
                this.wrapper.addEventListener('mouseleave', () => this.startAutoplay());

                // 5. Atualizar a UI inicial (setas e indicadores)
                this.updateUI();
            }

            /**
             * Gera os indicadores de slide (bolinhas) no HTML
             */
            generateIndicators() {
                if (!this.indicatorsContainer) return;

                for (let i = 0; i < this.totalSlides; i++) {
                    const dot = document.createElement('button');
                    dot.classList.add('indicator-dot-v2');
                    dot.setAttribute('aria-label', `Ir para slide ${i + 1}`);
                    dot.addEventListener('click', () => this.goToSlide(i));
                    this.indicatorsContainer.appendChild(dot);
                }
                this.indicators = this.indicatorsContainer.querySelectorAll('.indicator-dot-v2');
            }

            /**
             * Move o carrossel para um slide específico
             * @param {number} index - Índice do slide
             */
            goToSlide(index) {
                // Lógica de navegação finita (não volta ao início/fim automaticamente)
                if (index < 0 || index >= this.totalSlides) {
                    return;
                }

                this.currentSlideIndex = index;

                // Calcula a distância de translação (em porcentagem)
                const offset = -this.currentSlideIndex * 100;
                this.track.style.transform = `translateX(${offset}%)`;

                // Atualiza a UI (setas e indicadores)
                this.updateUI();

                // Reiniciar autoplay
                this.restartAutoplay();
            }

            /**
             * Atualiza a visibilidade das setas e o estado dos indicadores
             */
            updateUI() {
                // 1. Atualizar visibilidade das setas (Setas Condicionais)
                // A seta 'Anterior' some no primeiro slide (index 0)
                if (this.currentSlideIndex === 0) {
                    this.prevButton.classList.add('hidden');
                } else {
                    this.prevButton.classList.remove('hidden');
                }

                // A seta 'Próximo' some no último slide (index totalSlides - 1)
                if (this.currentSlideIndex === this.totalSlides - 1) {
                    this.nextButton.classList.add('hidden');
                } else {
                    this.nextButton.classList.remove('hidden');
                }

                // 2. Atualizar indicadores
                if (this.indicators) {
                    this.indicators.forEach((dot, index) => {
                        if (index === this.currentSlideIndex) {
                            dot.classList.add('active');
                        } else {
                            dot.classList.remove('active');
                        }
                    });
                }
            }

            /**
             * Vai para o próximo slide
             */
            goToNextSlide() {
                const nextIndex = this.currentSlideIndex + 1;
                this.goToSlide(nextIndex);
            }

            /**
             * Vai para o slide anterior
             */
            goToPrevSlide() {
                const prevIndex = this.currentSlideIndex - 1;
                this.goToSlide(prevIndex);
            }

            /**
             * Inicia o autoplay
             */
            startAutoplay() {
                if (this.autoplayInterval) {
                    return; // Já está rodando
                }

                this.autoplayInterval = setInterval(() => {
                    // Lógica de loop para o autoplay
                    const nextIndex = (this.currentSlideIndex + 1) % this.totalSlides;
                    this.goToSlide(nextIndex);
                }, this.autoplayDelay);
            }

            /**
             * Para o autoplay
             */
            stopAutoplay() {
                if (this.autoplayInterval) {
                    clearInterval(this.autoplayInterval);
                    this.autoplayInterval = null;
                }
            }

            /**
             * Reinicia o autoplay
             */
            restartAutoplay() {
                this.stopAutoplay();
                this.startAutoplay();
            }
        }

        /**
         * Inicializar o carrossel de produtos quando o DOM estiver pronto
         */
        document.addEventListener('DOMContentLoaded', () => {
            // O seletor é o wrapper do carrossel de produtos
            const carouselWrapper = document.querySelector('.product-carousel-wrapper-v2');
            if (carouselWrapper) {
                new ProductCarouselV2('.product-carousel-wrapper-v2');
            }
        });




    </script>

