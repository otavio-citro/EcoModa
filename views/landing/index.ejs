    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const carrosselFaixa = document.querySelector('.carrossel-testemunhos .carrossel-faixa');
            const testemunhos = document.querySelectorAll('.carrossel-testemunhos .testemunho-item');
            const prevBtn = document.querySelector('.carrossel-testemunhos .prev-btn');
            const nextBtn = document.querySelector('.carrossel-testemunhos .next-btn');
            const indicadores = document.querySelectorAll('.carrossel-testemunhos .indicador-ponto');

            if (!carrosselFaixa || testemunhos.length === 0) {
                // Se o carrossel não existir, não faz nada.
                return;
            }

            let indiceAtual = 0;
            const totalTestemunhos = testemunhos.length;

            // Função para atualizar a exibição do carrossel
            function atualizarCarrossel() {
                // Calcula o deslocamento necessário (em porcentagem)
                // Cada testemunho ocupa 100% da largura do carrossel-faixa
                const deslocamento = -indiceAtual * 100;
                carrosselFaixa.style.transform = `translateX(${deslocamento}%)`;

                // Atualiza os indicadores
                indicadores.forEach((indicador, index) => {
                    indicador.classList.remove('ativo');
                    if (index === indiceAtual) {
                        indicador.classList.add('ativo');
                    }
                });
            }

            // Navegação para o próximo slide
            function proximoSlide() {
                indiceAtual = (indiceAtual + 1) % totalTestemunhos;
                atualizarCarrossel();
            }

            // Navegação para o slide anterior
            function slideAnterior() {
                indiceAtual = (indiceAtual - 1 + totalTestemunhos) % totalTestemunhos;
                atualizarCarrossel();
            }

            // Event Listeners para os botões
            if (prevBtn) {
                prevBtn.addEventListener('click', slideAnterior);
            }
            if (nextBtn) {
                nextBtn.addEventListener('click', proximoSlide);
            }

            // Event Listeners para os indicadores
            indicadores.forEach(indicador => {
                indicador.addEventListener('click', (e) => {
                    const slideIndex = parseInt(e.target.getAttribute('data-slide'));
                    indiceAtual = slideIndex;
                    atualizarCarrossel();
                });
            });

            // Inicia o carrossel no primeiro slide
            atualizarCarrossel();

            // Opcional: Auto-play (a cada 5 segundos)
            setInterval(proximoSlide, 5000);
        });

    </script>



