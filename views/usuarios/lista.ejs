<div class="main-wrapper">
        <aside class="sidebar">
            
          <h2><a href="/landing" class="sidebar-link" data-content="configuracoes-content"><i class="fa-solid fa-house"></i></a>
                Lista de Usuarios</h2> 
            <nav class="sidebar-nav">
                <ul>
                    <a href="/categorias/novo" class="btn btn-principal">Adicionar categoria</a>
                    <li><a href="../admin/dashboard" class="sidebar-link" data-content="dashboard-content">Dashboard</a></li>
                    <li><a href="../produtos/listar" class="sidebar-link" data-content="produtos-content">Produtos</a></li>
                    <li><a href="../categorias/listar" class="sidebar-link " data-content="categorias-content">Categorias</a></li>
                    <li><a href="../usuarios/listar" class="sidebar-link active" data-content="relatorios-content">Usuarios</a></li>
                    <li><a href="../admin/logout" class="sidebar-link" data-content="configuracoes-content">Sair</a></li>
                    
                </ul>
            </nav>
        </aside>

        <main class="content">
             <h2>Lista de Categorias</h2>
        

        <!-- criando form de pesquisa -->
        <form action="/categorias/listar" method="get" class="form form-cunsulta">
            <input type="text" name="busca" placeholder="Buscar por categoria">
            <select name="ordem">
                <option value="nome_categoria">ordenar A-Z</option>
                <option value="nome_categoria desc">ordenar Z-A</option>
                <option value="nome_categoria ">categorias geral</option>
                <!-- <option value="formacao">ordenar por formação</option> -->
            </select>
            <button type="submit" class="btn btn-principal">Buscar</button>
        </form>
 <table class="dado-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Senha</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% for (let usuario of dadosusuarios) { %>
                <tr>
                    <td><%= usuario.nome %></td>
                    <td><%= usuario.senha %></td>
                    <td><%= usuario.email %></td>
                    <td class="acoes">
                        <a href="/usuarios/editar/<%= usuario.id_usuario %>" class="btn btn-edit">Editar</a>
                        <form action="/usuarios/excluir/<%= usuario.id_usuario %>" method="post">
                            <button type="submit" class="btn btn-delete">Excluir</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
        
    </main>
    </div>



