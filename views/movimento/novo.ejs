 <link rel="stylesheet" href="/css/style.css"> 

 <div class="produtos-container">
  <h2>Cadastrar Movimentação</h2>
  <form method="POST" action="/movimento/novo" class="form-cadastro-produto">
    <div class="form-row">
      <label for="nome">Produto:</label>
        <select id="id_produto" name="id_produto" required>
            <option value="">Selecione um produto</option>
            <% produtos.forEach(p => { %>
            <option value="<%= p.id_produto %>"><%= p.nome_produto %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-row">
      <label for="estoque_minimo">Tipo:</label>
        <select id="tipo" name="tipo" required>
            <option value="E">Entrada</option>
            <option value="S">Saída</option>
        </select>
    </div>
    <div class="form-row">
      <label for="quantidade_mov">Quantidade:</label>
      <input type="number" id="quantidade_mov" name="quantidade_mov" min="0" required>
    </div>
    <div class="form-row">
      <label for="nome">Usuario:</label>
        <select id="id_usuario" name="id_usuario" required>
            <option value="">Selecione um usuario</option>
            <% usuarios.forEach(u => { %>
            <option value="<%= u.id_usuario %>"><%= u.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="botao-cadastro">Cadastrar</button>
    <a href="/movimento/listar" class="botao-voltar">Cancelar</a>
  </form>
</div>