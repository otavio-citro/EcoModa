                </li>
               
            </ul>
        </nav>
    </aside>

<div class="produtos-container">
    <h2>Lista de Movimentações</h2>
    <a href="/movimento/novo" class="botao-adicionar">Adicionar Movimentações</a>
    <form method="GET" action="/movimento/listar" class="formulario-busca">
        <input type="text" name="busca" value="<%= busca || '' %>" placeholder="Buscar...">
        <button class="botao-buscar">Buscar</button>
    </form>
    <table class="border=1" >
        <tr>
            <th>Data</th>
            <th>Tipo</th>
            <th>Produto</th>
            <th>Quantidade Prod.</th>
            <th>Quantidade Mov.</th>
            <th>Ações</th>
        </tr>
        <% movimento.forEach(m=>{ %>
            <tr>
                <td>
                    <%= new Date(m.data_).toLocaleDateString('pt-BR') %>
                </td>
                <td>
                    <%= m.tipo %>
                </td>
                <td>
                    <%= m.nome_produto %>
                </td>
                <td>
                    <%= m.qtde_produto %>
                </td>
                <td>
                    <%= m.quantidade_total %>
                </td>
                <td class="acoes">
                    <a href="/movimento/editar/<%= m.id_movimentacao %>" class="botao-editar">Editar</a>
                    <form method="POST" action="/movimento/excluir/<%= m.id_movimentacao %>" style="display:inline;">
                        <button type="submit" class="botao-excluir">Excluir</button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </table>
    <a href="/movimento/listar" class="botao-voltar">Voltar</a>
</div>

